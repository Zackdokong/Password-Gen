#define _CRT_SECURE_NO_WARNINGS
#include <stdio.h>
#include <Windows.h>
#include <stdlib.h>
#include <time.h>

int main()
{
	printf("It will generate 5,595,818,096,650,401â€¬ kind of password randomly. Choose one you like.\n\a");
	for (; ; )
	{
		int password[16];

		printf("PASSWORD GENERATOR\n\a");
		Sleep(100);

		printf("Generating first letter\n\a");
		Sleep(1000);

		srand(time(NULL));
		password[0] = rand() % 93 + 32;

		printf("Generating second letter\n\a");
		Sleep(1000);

		srand(time(NULL));
		password[1] = rand() % 93 + 32;

		printf("Generating third letter\n\a");
		Sleep(1000);

		srand(time(NULL));
		password[2] = rand() % 93 + 32;

		printf("Generating fourth letter\n\a");
		Sleep(1000);

		srand(time(NULL));
		password[3] = rand() % 93 + 32;

		printf("Generating fifth letter\n\a");
		Sleep(1000);

		srand(time(NULL));
		password[4] = rand() % 93 + 32;

		printf("Generating sixth letter\n\a");
		Sleep(1000);

		srand(time(NULL));
		password[5] = rand() % 93 + 32;

		printf("Generating 7th letter\n\a");
		Sleep(1000);

		srand(time(NULL));
		password[6] = rand() % 93 + 32;

		printf("Generating 8th letter\n\a");
		Sleep(1000);

		srand(time(NULL));
		password[7] = rand() % 93 + 32;

		printf("Your new password is :\a");

		for (int i = 0; i <= 7; i++)
		{
			printf("%c\a", password[i]);
			Sleep(100);
		}
		printf("\n");
	}
	return 0;
}
